<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>

    <style name="icon.left" parent="icon">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
    </style>

    <style name="icon.right" parent="icon">
        <item name="android:gravity">top|right</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:background">@color/grey_light</item>
        <item name="android:layout_marginLeft">@dimen/spacing_larger_72</item>
    </style>

    <style name="separator_vertical">
        <item name="android:layout_width">@dimen/line_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grey_light</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medial_24</item>
    </style>

    <style name="layoutOuter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small_8</item>
    </style>

    <style name="layoutInner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium_32</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="topText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="topText.dig" parent="topText">
        <item name="android:textSize">@dimen/font_size_large_20</item>
    </style>

    <style name="topText.text" parent="topText">
        <item name="android:textSize">@dimen/font_size_small_12</item>
    </style>

    <style name="topLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medial_24</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="progress_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <style name="user_foto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/profile_image_size</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/fab_right_space</item>
        <item name="android:src">@drawable/ic_edit_black_24dp</item>
    </style>

    <style name="avatar">
        <item name="android:layout_width">@dimen/avatar_size</item>
        <item name="android:layout_height">@dimen/avatar_size</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal_16</item>
    </style>

    <style name="drawerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_medium_56</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="drawerTxt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/font_size_medial_14</item>
    </style>

    <style name="fab_login">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/fab_right_space</item>
        <item name="android:src">@drawable/ic_add_black_24dp</item>
    </style>

    <style name="AppTheme.Button.Red" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/color_accent</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <!--Toolbar-->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/color_white</item>
        <item name="android:textColorSecondary">@color/color_white</item>
        <item name="android:actionMenuTextColor">@color/color_white</item>
    </style>

    <style name="Theme.MyCompatTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/color_accent</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/color_accent</item>
        <item name="background">@color/color_accent</item>
    </style>

</resources>
